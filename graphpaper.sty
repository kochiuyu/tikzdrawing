\newcommand{\graphpaper}{
	\draw[step=0.5,green!30!black!10, thin] (-2,-2) grid (8,8);
	\draw[step=1,green!70!black!30] (-2,-2) grid (8,8);
	\foreach \x in {-2,...,8}
		{
		\draw (\x, 0) node[font=\scriptsize,anchor=north]{$\x$};
		}
	\foreach \y in {-2,...,8}
		{
		\draw (0,\y) node[font=\scriptsize,anchor=east]{$\y$};
		}		
	\filldraw[red] (0,0) circle (2pt);
}
\thispagestyle{empty}


\newcommand{\longgraphpaper}{
	\draw[step=0.5,green!30!black!10, thin] (-1,-2) grid (13,8);
	\draw[step=1,green!70!black!30] (-1,-2) grid (13,8);
	\foreach \x in {-1,...,13}
		{
		\draw (\x, 0) node[font=\scriptsize,anchor=north]{$\x$};
		}
	\foreach \y in {-2,...,8}
		{
		\draw (0,\y) node[font=\scriptsize,anchor=east]{$\y$};
		}		
